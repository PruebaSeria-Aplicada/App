<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="vertical"
    tools:context="com.keggphones.DetailPhoneActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <ImageView
            android:id="@+id/icm_phone"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/iphone"
            android:layout_marginLeft="50dp"/>

        <TextView
            android:id="@+id/txv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ic_album_overflow_height"
            android:layout_below="@+id/imc_phone"
            android:text="Características:"/>

        <TextView
            android:id="@+id/txv_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_vertical_margin"
            android:layout_below="@+id/imc_phone"
            android:text="Marca:"/>
        <TextView
            android:id="@+id/txv_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_vertical_margin"
            android:layout_below="@+id/txv_brand"
            android:text="Modelo:"/>
        <TextView
            android:id="@+id/txv_internal_memory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_vertical_margin"
            android:layout_below="@+id/txv_model"
            android:text="Memoria interna:"/>
        <TextView
            android:id="@+id/txv_external_memory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_vertical_margin"
            android:layout_below="@+id/txv_internal_memory"
            android:text="Memoria externa:"/>
        <TextView
            android:id="@+id/txv_pixels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_vertical_margin"
            android:layout_below="@+id/txv_external_memory"
            android:text="Pixels:"/>
        <TextView
            android:id="@+id/txv_flash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_vertical_margin"
            android:layout_below="@+id/txv_pixels"
            android:text="Flash:"/>
        <TextView
            android:id="@+id/txv_resolution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_vertical_margin"
            android:layout_below="@+id/txv_flash"
            android:text="Resolución:"/>
        <TextView
            android:id="@+id/txv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_vertical_margin"
            android:layout_below="@+id/txv_resolution"
            android:text="Precio:"/>

        <Button
            android:id="@+id/btn_sale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txv_price"
            android:drawableRight="@drawable/shopping_cart_loaded_filled_50"
            android:backgroundTint="@color/colorAccent"
            android:text="@string/txt_btn_sale"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            />

    </LinearLayout>


</RelativeLayout>
